<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Подключение объектов сущностей -->
        <mapping package="com.springapp.mvc.api.domain"/>
        <mapping class="com.springapp.mvc.api.domain.Address"/>
        <mapping class="com.springapp.mvc.api.domain.Cart"/>
        <mapping class="com.springapp.mvc.api.domain.Categories"/>
        <mapping class="com.springapp.mvc.api.domain.Goods"/>
        <mapping class="com.springapp.mvc.api.domain.Orders"/>
        <mapping class="com.springapp.mvc.api.domain.Users"/>
    </session-factory>
</hibernate-configuration>